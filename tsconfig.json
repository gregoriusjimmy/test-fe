{
  "compilerOptions": {
    "baseUrl": "src",
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "paths": {
      "components/*": ["./components/*"],
      "constants/*": ["./constants/*"],
      "context/*": ["./context/*"],
      "store/*": ["./store/*"],
      "helpers/*": ["./helpers/*"],
      "hooks/*": ["./hooks/*"],
      "lib/*": ["./lib/*"],
      "api/*": ["./api/*"],
      "modules/*": ["./modules/*"],
      "services/*": ["./services/*"],
      "pages/*": ["./pages/*"],
      "routes/*": ["./routes/*"],
      "style/*": ["./style/*"],
      "types/*": ["./types/*"],
      "@type/*": ["./*"],
      "@ui/*": ["./*"],
      "@constant/*": ["./*"]
    }
  },
  "include": ["src"]
}
